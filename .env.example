# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_ENV=development
NODE_ENV=development

# Database Configuration (Firebase Firestore or PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/realtor_platform"
DIRECT_URL="postgresql://username:password@localhost:5432/realtor_platform"

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY="your-firebase-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-firebase-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your-sender-id"
NEXT_PUBLIC_FIREBASE_APP_ID="your-app-id"
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID="G-XXXXXXXXXX"

# Firebase Admin SDK (Server-side)
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key\n-----END PRIVATE KEY-----\n"

# Authentication
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Redis Cache (Upstash)
REDIS_URL="redis://localhost:6379"
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"

# File Storage (Firebase Storage or Cloudflare R2)
# Firebase Storage (Primary)
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"

# Cloudflare R2 (Alternative)
CLOUDFLARE_R2_ACCESS_KEY_ID="your-r2-access-key"
CLOUDFLARE_R2_SECRET_ACCESS_KEY="your-r2-secret-key"
CLOUDFLARE_R2_BUCKET_NAME="realtor-platform-files"
CLOUDFLARE_R2_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"
NEXT_PUBLIC_CLOUDFLARE_R2_PUBLIC_URL="https://your-domain.com"

# Email Service (Resend)
RESEND_API_KEY="re_your-resend-api-key"
RESEND_FROM_EMAIL="noreply@your-domain.com"

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# 3CX Phone System Integration
CX_SERVER_URL="https://your-3cx-server.com"
CX_API_KEY="your-3cx-api-key"
CX_USERNAME="your-3cx-username"
CX_PASSWORD="your-3cx-password"

# DocuSign Integration
DOCUSIGN_INTEGRATION_KEY="your-docusign-integration-key"
DOCUSIGN_USER_ID="your-docusign-user-id"
DOCUSIGN_ACCOUNT_ID="your-docusign-account-id"
DOCUSIGN_BASE_PATH="https://demo.docusign.net/restapi"
DOCUSIGN_PRIVATE_KEY="your-docusign-private-key"

# Google Maps API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# MLS Integration
MLS_LOGIN_URL="https://your-mls-rets-login-url"
MLS_USERNAME="your-mls-username"
MLS_PASSWORD="your-mls-password"
MLS_USER_AGENT="YourApp/1.0"

# Monitoring and Analytics
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Security
ENCRYPTION_KEY="your-32-character-encryption-key-here"
JWT_SECRET="your-jwt-secret-key-here"
WEBHOOK_SECRET="your-webhook-secret-key-here"

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
NEXT_PUBLIC_USE_FIREBASE_AUTH=true
NEXT_PUBLIC_USE_FIREBASE_STORAGE=true

# Development Only
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_MOCK_DATA=false

# Netlify Configuration
NETLIFY_SITE_ID="your-netlify-site-id"
NETLIFY_AUTH_TOKEN="your-netlify-auth-token"